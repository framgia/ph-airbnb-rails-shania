<% provide(:title, "Login") %>
<div class="row justify-content-center">
    <div class="col-md-4 col-md-offset-4 mt-4">
        <h2 class="text-center">Login</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <div class="form-group">
                <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: 'form-control' %>
            </div>
            
            <div class="form-check form-group">
                <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, class: "form-check-label" %>
                <% end %>
                <span class="float-right">
                    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "d-inline-block pull-right" %>
                    <% end %>
                </span>
            </div>

            <div class="actions text-center">
                <%= f.submit "Login", class: "btn btn-dark btn-block" %>
            </div>
            <hr>
            <% unless current_user %>
                <%= link_to "Login with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-block" %>
            <% else %>  <%= current_user[:name] %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            <% end %>
        <% end %>
    </div>
</div>
