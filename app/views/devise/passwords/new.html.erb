<% provide(:title, "Reset Password") %>
<div class="row justify-content-center">
    <div class="col-md-4 col-md-offset-4 mt-4">
        <h2 class="text-center">Forgot your password?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            
            <div class="field">
                <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <br />

            <div class="actions text-center">
                <%= f.submit "Send me reset password instructions", class: "btn btn-dark btn-block" %>
            </div>
        <% end %>
    </div>
</div>