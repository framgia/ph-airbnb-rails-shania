<div class="container">
    <div class="row">
        <%= image_tag @property.photos.first.image.url(:original), class: "full-image" %>
    </div> <!-- image tag -->
    <div class="row mt-4">
        <div class="col-8">
            <div class="row">
                <div class="col-8">
                    <h2><%= @property.title %></h2>
                    <h5><%= @property.location %></h5>
                </div>
                <div class="col-4 text-center">
                    <span class="rounded-circle">
                        <%= profile_picture(@property.user)%>
                    </span>
                    <h5 class="mt-4"><%= @property.user.name %></h5>
                </div>
            </div> <!-- row - basic info -->
            <hr />
            <div class="row text-center mt-4 text-primary">
                <div class="col-3">
                    <i class="fa fa-home fa-2x"></i>
                </div>
                <div class="col-3">
                    <i class="fa fa-user-circle fa-2x"></i>
                </div>
                <div class="col-3">
                    <i class="fa fa-bed fa-2x"></i>
                </div>
                <div class="col-3">
                    <i class="fa fa-bath fa-2x"></i>
                </div>
            </div> <!-- row - fa icons -->
            <div class="row text-center text-primary">
                <div class="col-3">
                    <%= @property.home_type %>
                </div>
                <div class="col-3">
                    <%= @property.guest_count %> Guests
                </div>
                <div class="col-3">
                    <%= @property.bedroom_count %> Beds
                </div>
                <div class="col-3">
                    <%= @property.bathroom_count %> Bathrooms
                </div>
            </div> <!-- row - fa text -->
            <hr />
            <div class="row">
                <div class="col-12">
                    <h3>About this Property</h3>
                    <p>
                        <%= @property.description %>
                    </p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-3">
                    <h3>Amenities</h3>
                </div>
                <div class="col-9">
                    <div class="row">
                        <div class="col-6">
                            <ul class="amenities">
                                <li class="<%= @property.has_tv? ? '' : 'text-line-through' %>"> 
                                    TV
                                </li>
                                <li class="<%= @property.has_kitchen? ? '' : 'text-line-through' %>"> 
                                    Kitchen
                                </li>
                                <li class="<%= @property.has_wifi? ? '' : 'text-line-through' %>"> 
                                    Internet
                                </li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul class="amenities">
                                <li class="<%= @property.has_heater? ? '' : 'text-line-through' %>"> 
                                    Heating
                                </li>
                                <li class="<%= @property.has_aircon ? '' : 'text-line-through' %>"> 
                                    Air Condition
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" role="listbox" style="width:100%; height: 500px !important;">
                    <ol class="carousel-indicators">
                        <% @property.photos.each.with_index(0) do |photo, index| %>
                            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : '' %>"></li>
                        <% end %>
                    </ol>
                    <div class="carousel-inner">
                        <% @property.photos.each.with_index(0) do |photo, index| %>
                            <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                                <%= image_tag photo.image.url(:original), class: "d-block w-100" %>
                            </div>
                        <% end %>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div> <!-- col 8 -->
        <div class="col-4">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <span>
                        <i class="fas fa-bolt yellow"></i> 
                        $<%= @property.price %> 
                    </span>
                    <span class="float-right">
                        Per Night
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <label class="col-6">Check in</label>
                        <label class="col-6">Check out</label>
                    </div>
                    <div>
                        <button class="btn btn-primary btn-block my-2" disabled="disabled">Book Now</button>
                    </div>
                </div>
            </div>
        </div> <!-- col 4 -->
    </div>
</div> <!-- container -->
