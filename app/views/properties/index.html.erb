<div class="row"> 
    <div class="col-3">
        <div class="card mt-4">
            <div class="card-body">
                <%= render 'managesidebar' %>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="card mt-4">
            <div class="card-header text-white bg-dark">
                Your Listings 
            </div>    
            <div class="card-body">
                <div class = "container ">
                    <div class = "row">
                        <% if current_user.properties.any? %>
                            <% @properties.each do |property| %>
                                <div class="col-2 mt-3">
                                    <% if property.photos.any? %>
                                        <%= image_tag property.photos.first.image.url(:thumb), style: 'height:80px;width:110px;', class: "img-thumbnail" %>
                                    <% else %>
                                        <%= image_tag 'nophoto.png', style: 'height:100px;width:110px;', class: "img-thumbnail" %>
                                    <% end %>
                                </div>
                                <div class="col-7 mt-3">
                                    <h4><%= property.title %></h4>
                                </div>
                                <div class="col-3 mt-3">
                                    <%= link_to 'Update', listing_property_url(property), class: "btn btn-info" %>
                                </div>
                            <% end %>
                        <% else %>
                            <div class="col-12 text-center">
                                <p><i class="fa fa-folder-open" style="font-size: 5rem;"></i></p>
                            </div>
                            <div class="col-12 text-center">
                                <p>The page you are looking for is empty</p>
                                <%= link_to "List your own space now", new_property_path, class: "text-info" %>
                            </div>
                        <% end %> <!-- if property.any -->
                    </div> <!-- row -->
                </div> <!-- container -->
            </div> <!-- card body -->
        </div>
    </div>
</div>