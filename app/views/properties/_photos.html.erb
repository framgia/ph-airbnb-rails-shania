
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="form-group">
                <div class="control-group">
                    <%= f.label :photos, class: "control-label" %>
                    <div class="controls">
                        <div class="text-center">
                            <%= file_field_tag "photos[]", type: :file, multiple: true %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-2 mt-4">
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group" role="group">
                    <%= f.submit "Add photos", class: "btn btn-dark" %>
                </div>
            </div>
        </div> <!-- button -->
    </div> <!-- row -->
    <div class="container col-lg-10">
        <div class="row card-deck">
            <% @property.photos.each do |photo| %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header preview">
                            <%= image_tag photo.image.url(:original) %>
                        </div>
                        <div class="card-body">
                            <%= link_to "Delete", property_photo_path(@property, photo) , method: :delete,
                                data: {confirm: "Are you sure want to delete this image?"}, class: "btn btn-dark" %>
                        </div>
                    </div> <!-- card -->
                </div> <!-- col -->
            <% end %>
        </div> <!-- row card-deck -->
    </div> <!-- container -->