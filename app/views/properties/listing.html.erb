<%= form_for(@property) do |f| %>
    <div class="row pt-4">
        <div class="col-lg-3 ">
            <%= render 'sidebar' %>
        </div>
        <div class="col-lg-9">
            <div class="card mb-5">
                <div class="card-header text-center text-white bg-dark">Listing</div>
                    <div class="card-body">
                        <div class="container">
                             <div class="row col-12">
                                <div class="form-group col-4">
                                    <label class="text-dark">Home Type</label>
                                    <%= f.select :home_type, [["Apartment","apartment"],["House","house"],["Bed & Breakfast","bednbreakfast"]], class: "form-control", prompt: "Select" %>
                                </div> 
                                <div class="form-group col-4">
                                    <label class="text-dark">Room Type</label>
                                    <%= f.select :room_type, [["Entire","entire"],["Private","private"],["Shared","shared"]], class: "form-control", prompt: "Select" %>
                                </div> 
                                <div class="form-group col-4">
                                    <label class="text-dark">Bedroom Count</label>
                                    <%= f.select :bedroom_count, [["1","1"],["2","2"],["3","3"],["4+","4+"]], class: "form-control", prompt: "Select" %>
                                </div> 
                                <div class="form-group col-4">
                                    <label class="text-dark">Guest Count</label>
                                    <%= f.select :guest_count, [["1","1"],["2","2"],["3","3"],["4+","4+"]], class: "form-control", prompt: "Select" %>
                                </div> 
                                <div class="form-group col-4">
                                    <label class="text-dark">Bathroom Count</label>
                                    <%= f.select :bathroom_count, [["1","1"],["2","2"],["3","3"],["4+","4+"]], class: "form-control", prompt: "Select" %>
                                </div> 
                            </div> 
                            <div class="row col-12 mt-4">
                                <div class="form-group col-4">
                                    <div class="btn-toolbar" role="toolbar">
                                        <div class="btn-group" role="group">
                                            <%= f.submit "Create my room", class: "btn btn-dark" %>
                                        </div>
                                    </div>
                                </div> <!-- button -->
                            </div> <!-- row -->
                        </div>  <!-- container -->
                    </div>  <!-- card body -->
                </div> <!-- card header -->
            </div> <!-- overall card -->
        </div> <!-- overall col -->
    </div> <!-- overall row -->
<% end %>